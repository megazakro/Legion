<UserControl x:Class="Legion.Entity.View.Weapon.Ammo.MissileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="48" d:DesignWidth="48" CacheMode="BitmapCache" >
	<Grid x:Name="LayoutRoot" Background="Transparent">

		<Polygon x:Name="shapeBody" 
				 Opacity="1.0"
				 Points="12,23
					 13,23 13,21 14,21 19,23
					 26,23 26,22 29,23
					 35,23 38,24 35,25
					 29,25 26,26 26,25
					 19,25 14,27 13,27 13,25
					 12,25"
				 Stroke="GhostWhite"
			StrokeThickness="1" Fill="GhostWhite"></Polygon>
		<Ellipse x:Name="shapeExplode"
				 Opacity="0.0"
				 Visibility="Collapsed" Width="48" Height="48">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Color="Azure" Offset="0" />
					<GradientStop Color="White" Offset="0.8" />
					<GradientStop Color="SkyBlue" Offset="0.9" />
					<GradientStop Color="PowderBlue" Offset="1" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>

	</Grid>
</UserControl>
